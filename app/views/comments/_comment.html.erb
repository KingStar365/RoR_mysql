    <strong class="block font-medium mb-1">Name:</strong>
    <%= comment.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= comment.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Post:</strong>
    <%= comment.post %>
  </div>
