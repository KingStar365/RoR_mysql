<% content_for :title, "Showing post" %>
<div class = "w-full mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
<div class="space-y-12">
  <div class="border-b border-gray-900/10 pb-12">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h2 class="text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight ">Show Post</h2>


    <%= render @post %>
  </div>
</div>

<div class="mt-6 flex items-center justify-end gap-x-6">
  <%= link_to "Edit", edit_post_path(@post), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
  <%= link_to "Back to posts", posts_path, class: "rounded-md bg-gray-200 px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-100 focus-visible:outline-2 focus-visible:outline-offset-2" %>
  <%= button_to "Destroy", @post, method: :delete, class: "rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-red-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600", data: { turbo_confirm: "Are you sure?" } %>
</div>
</div>