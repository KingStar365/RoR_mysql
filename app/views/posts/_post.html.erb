<div id="<%= dom_id post %>" class="my-5 space-y-5">
  <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-full">
      <label for="title" class="block text-sm/6 font-medium text-gray-900">Title</label>
      <div class="mt-2">
        <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
          <input type="text" id="title" value="<%= post.title %>" class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" readonly />
        </div>
      </div>
    </div>

    <div class="col-span-full">
      <label for="body" class="block text-sm/6 font-medium text-gray-900">Body</label>
      <div class="mt-2">
        <textarea id="body" rows="10" class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" readonly><%= post.body %></textarea>
      </div>
    </div>
  </div>
</div>